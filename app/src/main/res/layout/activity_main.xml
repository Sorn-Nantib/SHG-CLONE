    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="149dp"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                app:cardCornerRadius="20dp"


                >

                <ImageView
                    android:id="@+id/loan"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/ic_loans"
                    android:padding="5dp"
                    />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/texLoad"
                android:layout_width="60dp"
                android:layout_height="29dp"
                android:layout_marginLeft="50dp"
                android:text="LOANS"
                android:textStyle="bold"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >

            <androidx.cardview.widget.CardView
                android:id="@+id/cardApply"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:id="@+id/loanApply"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_apply_loan" />


            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/Apply"
                android:layout_width="96dp"
                android:layout_height="29dp"
                android:layout_marginLeft="9dp"
                android:text="APPLY LOAN"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="149dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/cardPayMent"
                android:layout_width="70dp"
                android:layout_height="70dp"

                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:id="@+id/PayMent"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="12dp"
                    android:padding="5dp"

                    android:src="@drawable/ic_repayment" />


            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/RePayMent"
                android:layout_width="96dp"
                android:layout_height="29dp"
                android:layout_marginLeft="5dp"
                android:text="REPAYMENT"
                android:textStyle="bold"

                />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="149dp"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >
            <androidx.cardview.widget.CardView
                android:id="@+id/cardCreditRating"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:id="@+id/CreditRating"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="12dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_credit_rating" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/texCreditRating"
                android:layout_width="112dp"
                android:layout_height="29dp"
                android:layout_marginLeft="25dp"
                android:text="CREDIT RATING"
                android:textStyle="bold"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >
            <androidx.cardview.widget.CardView
                android:id="@+id/cardCalculator"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:id="@+id/Calculator"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_calculator" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/infoCalculator"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_marginLeft="10dp"
                android:text="CALCULATOR"
                android:textStyle="bold"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="149dp"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >
            <androidx.cardview.widget.CardView
                android:id="@+id/cardSHG"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:paddingTop="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                app:cardCornerRadius="20dp"

                >
                <ImageView
                    android:id="@+id/SHG"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_shg_point"
                    android:padding="5dp"
                    />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/iSHG"
                android:layout_width="83dp"
                android:layout_height="29dp"
                android:layout_marginLeft="10dp"
                android:text="SHG POINT"
                android:textStyle="bold"

                />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="149dp"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >
            <androidx.cardview.widget.CardView
                android:id="@+id/cardAboutUs"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:id="@+id/aboutUs"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_about_us"
                    android:padding="5dp"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/texAbout"
                android:layout_width="112dp"
                android:layout_height="29dp"
                android:layout_marginLeft="40dp"

                android:text="ABOUT US"
                android:textStyle="bold"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="135dp"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >
            <androidx.cardview.widget.CardView
                android:id="@+id/cardProduct"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:id="@+id/product"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_product"
                    android:padding="5dp"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/texProduct"
                android:layout_width="112dp"
                android:layout_height="29dp"
                android:layout_marginLeft="20dp"
                android:text="PRODUCT"
                android:textStyle="bold"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="149dp"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >
            <androidx.cardview.widget.CardView
                android:id="@+id/card_viewsd"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:paddingTop="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="40dp"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:id="@+id/loanaad"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_partners"
                    android:padding="5dp"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/info_texte22x"
                android:layout_width="83dp"
                android:layout_height="29dp"

                android:text="PARTNERS"
                android:textStyle="bold"

                />

        </LinearLayout>


    </LinearLayout>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager_ImageSlider"
        android:layout_width="match_parent"
        android:layout_height="195dp"
        android:paddingStart="40dp"
        android:layout_marginTop="25dp"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="5dp"
        android:paddingEnd="40dp"/>
    <me.relex.circleindicator.CircleIndicator3
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:ci_drawable="@drawable/circleindicator_round"

        />

</LinearLayout>



